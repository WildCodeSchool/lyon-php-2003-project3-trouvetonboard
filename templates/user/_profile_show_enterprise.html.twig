<div class="{{ titleBlock }}">
    <div class="d-flex flex-fill align-items-stretch align-content-center justify-content-between">
        <h3 class="m-0 align-self-center">Enterprise :</h3>
        <div>
            {{ include('components/_icon_enterprise.html.twig') }}
        </div>
    </div>
</div>
{% if user.enterprise %}
    <table class="table">
        <tbody>
        <tr>
            <th width="{{ thWidth }}">Nom de l'entreprise :</th>
            <td>{{ user.enterprise.name }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">Status du payment :</th>
            <td>{{ user.enterprise.paymentStatus }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">Adresse :</th>
            <td>{{ user.enterprise.paymentStatus }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">Representant legal:</th>
            <td>{{ user.enterprise.legelRepresentative }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">Lien linkedIn:</th>
            <td>{{ user.enterprise.linkedinLink }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">Lien site Web:</th>
            <td>{{ user.enterprise.websiteLink }}</td>
        </tr>
        </tbody>
    </table>
    <div class="d-flex p-2 justify-content-around ml-1 container-a">
        <a href="{{ path('enterprise_edit' , { "id": app.user.enterprise.id }) }}">
            Modifier les informations de l'entreprise</a>
    </div>
{% else %}
    <div class="d-flex p-2 justify-content-around ml-1 container-a">
        <a href="{{ path('enterprise_new') }}">
            Ajouter mon entreprise</a>
    </div>
{% endif %}
