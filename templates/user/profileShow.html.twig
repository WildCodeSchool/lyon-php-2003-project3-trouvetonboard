{% extends 'base.html.twig' %}

{% block title %} Mon Profil {% endblock %}

{% block body %}
    {% set thWidth = "40%" %}
    <div class="container-fluid row">
        <!-- col 1 -->
        <div class="col-lg-4 col-md-12">
            <div class="{{ formBlockStd }}">
                {% include 'user/_profile_show_base_user.html.twig' %}
                <div class="d-flex p-2 justify-content-around ml-1 container-a">
                    <a href="{{ path('user_profile_edit' , { "id": app.user.id }) }}">
                        Modifier mon profil</a>
                </div>
            </div>

            <div class="{{ formBlockStd }}">
                {% if is_granted('ROLE_ENTERPRISE') %}
                    {% include 'user/_profile_show_enterprise.html.twig' %}
                {% elseif is_granted('ROLE_ADVISOR') %}
                    {% include 'user/_profile_show_advisor.html.twig' %}
                {% endif %}
            </div>

        </div>
        <!-- col 2 -->
        <div class="col-lg-8 col-md-12 {{ formBlockStd }}">
            {% include 'user/_profile_show_board_request.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        // Get the modal
        const modal = document.getElementById("CVAdvisor");

        // Get the button that opens the modal
        const showBtn = document.getElementById("showCVButton");

        // Get the <span> element that closes the modal
        const closeBtn = document.getElementsByClassName("close")[0];

        // Get the button that closes the modal
        const closeBtnBis = document.getElementById("hideCVButton");

        // When the user clicks the "Voir mon CV" button, open the modal
        showBtn.onclick = function() {
            modal.style.display = "block";
        }

        // When the user clicks on "x", close the modal
        closeBtn.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks on "Fermer", close the modal
        closeBtnBis.onclick = function() {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
{% endblock %}
