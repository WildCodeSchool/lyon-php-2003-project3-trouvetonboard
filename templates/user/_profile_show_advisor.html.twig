<div class="{{ titleBlock }}">
    <div class="d-flex flex-fill align-items-stretch align-content-center justify-content-between">
        <h3 class="m-0 align-self-center">Advisor :</h3>
        <i class="fas fa-user-tie fa-3x"></i>
    </div>
</div>
{% if user.advisor %}
    <table class="table">
        <tbody>
        <tr>
            <th width="{{ thWidth }}">Votre historique de board :</th>
            <td>{{ user.advisor.isAlreadyBoardMember ? "rajouter l'historique" : "Vous n'êtes pas encore membre d'un board" }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">Status du payment :</th>
            <td>{{ user.advisor.paymentStatus }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">LinkedIn :</th>
            <td>{{ user.advisor.linkedinLink ? "lien LikedIn" : "insérer l'upload de lien" }}</td>
        </tr>
        <tr>
            <th width="{{ thWidth }}">CV:</th>
            <td>{{ user.advisor.cvLink ? "lien CV" : "insérer l'upload de lien" }}</td>
        </tr>
        </tbody>
    </table>
    <div class="d-flex p-2 justify-content-around ml-1 container-a">
        <a href="{{ path('advisor_edit' , { "id": app.user.advisor.id }) }}">
            Modifier mes informations Advisor</a>
    </div>
{% else %}
    <div class="d-flex p-2 justify-content-around ml-1 container-a">
        <a href="{{ path('advisor_new') }}">
            Ajouter mes informations Advisor</a>
    </div>
{% endif %}
