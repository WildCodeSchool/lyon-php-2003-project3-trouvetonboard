{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>IsRequest</th>
                <td>{{ profile.isRequest ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsPropose</th>
                <td>{{ profile.isPropose ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PaymentType</th>
                <td>{{ profile.paymentType }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ profile.title }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ profile.dateCreation ? profile.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('profile_index') }}">back to list</a>

    <a href="{{ path('profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
{% endblock %}
