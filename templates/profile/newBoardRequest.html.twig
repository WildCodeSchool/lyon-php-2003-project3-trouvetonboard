{% extends 'base.html.twig' %}

{% block title %}New Profile{% endblock %}

{% block body %}
    <div class="container-fluid m-2 p-0">
        <div class="{{ formFullColBlock }} flex-fill p-0">
            <div class="p-2 d-flex align-items-start justify-content-center align-content-start container-title-block">
                <h1>Creation d'une nouvelle demande de board member :</h1>
            </div>
            <div class="m-2 container-fluid justify-content-center flex-column ">
                {% set idCategoryBefore = -1 %}
                {% set idLevelBefore = -1 %}
                {% for aSkillBy in skillsByCategories %}
                    <div class="{{ containerStdProfile }} justify-content-center flex-column form-gca p-0">
                        <div class="p-2 d-flex align-items-start align-content-start container-title-block">
                            <h5>{{ aSkillBy.category.name }} :</h5>
                        </div>
                        <p class="m-2 question">{{ aSkillBy.category.EnterpriseQuestion }}</p>
                        {% set before = "" %}

                        {% for aSkill in aSkillBy.skills %}
                            {# it is five same skill with a level for each one  on to  five but at this time there is
                             implemented and we keep  just one of five same name skill #}


                            {% if before != aSkill.name %}
                                <div class="m-0 p-0 border-bottom border-style-blue">
                                    <div class="ml-5 d-flex flex-fill align-items-stretch align-content-center">
                                        <h6 class="m-0 align-self-center w-75">{{ aSkill.name }}</h6>
                                        <input class="m-0 align-self-center" type="checkbox">
                                        {% set before = aSkill.name %}
                                    </div>
                                </div>
                            {% endif %}


                        {% else %}
                        {% endfor %}

                    </div>
                {% else %}
                    <h1> Aucun skill detecter</h1>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
