{% extends 'base.html.twig' %}

{% block title %}Enterprise index{% endblock %}

{% block body %}
    <h1>Enterprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PaymentStatus</th>
                <th>Address</th>
                <th>LegelRepresentative</th>
                <th>WebsiteLink</th>
                <th>LinkedinLink</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enterprise in enterprises %}
            <tr>
                <td>{{ enterprise.id }}</td>
                <td>{{ enterprise.paymentStatus }}</td>
                <td>{{ enterprise.address }}</td>
                <td>{{ enterprise.legelRepresentative }}</td>
                <td>{{ enterprise.websiteLink }}</td>
                <td>{{ enterprise.linkedinLink }}</td>
                <td>{{ enterprise.zipCode }}</td>
                <td>{{ enterprise.city }}</td>
                <td>{{ enterprise.name }}</td>
                <td>
                    <a href="{{ path('enterprise_show', {'id': enterprise.id}) }}">show</a>
                    <a href="{{ path('enterprise_edit', {'id': enterprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enterprise_new') }}">Create new</a>
{% endblock %}
