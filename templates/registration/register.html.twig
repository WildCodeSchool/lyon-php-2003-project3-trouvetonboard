{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% block navbar %}
        
    {% endblock %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="{{ containerStd }} login">
        <div class="d-flex justify-content-around align-items-center align-content-center login bnj-form-width">



            {{ form_start(registrationForm) }}
            <div class="d-flex justify-content-around">
                <h1>Cr√©er votre profil</h1>
            </div>

            {% if form_errors(registrationForm.first_name) %}
                <div class="alert alert-danger">{{ form_row(registrationForm.first_name, {'attr' : {'class': 'form-control bnj-register-form-error'}}) }}</div>
            {% else %}
                {{ form_row(registrationForm.first_name, {'attr' : {'class': 'form-control'}}) }}
            {% endif %}

            {% if form_errors(registrationForm.last_name) %}
                <div class="alert alert-danger">{{ form_row(registrationForm.last_name, {'attr' : {'class': 'form-control bnj-register-form-error'}}) }}</div>
            {% else %}
                {{ form_row(registrationForm.last_name, {'attr' : {'class': 'form-control'}}) }}
            {% endif %}

            {% if form_errors(registrationForm.email) %}
                <div class="alert alert-danger">{{ form_row(registrationForm.email, {'attr' : {'class': 'form-control bnj-register-form-error'}}) }}</div>
            {% else %}
                {{ form_row(registrationForm.email, {'attr' : {'class': 'form-control'}}) }}
            {% endif %}

            {% if form_errors(registrationForm.plainPassword) %}
                <div class="alert alert-danger">{{ form_row(registrationForm.plainPassword, {label: false, 'attr' : {'class': 'form-control bnj-register-form-error'}}) }}</div>
            {% else %}
                {{ form_row(registrationForm.plainPassword, {label: false, 'attr' : {'class': 'form-control'}}) }}
            {% endif %}



            <div class="d-flex justify-content-around">
                <button type="submit" class="btn">Je m'inscris</button>
                {{ form_end(registrationForm) }}
            </div>

        </div>




    </div>
    {% block footer %}
        
    {% endblock %}


{% endblock %}
