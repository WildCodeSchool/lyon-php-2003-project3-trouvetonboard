{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}



    <div class="{{ containerStd }} login">
        <div class="d-flex justify-content-around align-items-center align-content-center login">



            {{ form_start(registrationForm) }}
            <div class="d-flex justify-content-around">
                <h1>Cr√©ation de profil</h1>
            </div>
            {{ form_row(registrationForm.first_name, {'attr' : {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.last_name, {'attr' : {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.email, {'attr' : {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                label: false, 'attr' : {'class': 'form-control'}
            }) }}
            <div class="d-flex justify-content-around">
                <button type="submit" class="btn">Inscription</button>
                {{ form_end(registrationForm) }}
            </div>

        </div>




    </div>

{% endblock %}
