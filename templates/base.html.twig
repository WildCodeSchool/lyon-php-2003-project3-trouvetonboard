<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap" rel="stylesheet">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-custom">
                <a class="navbar-brand" href="{{ path('home') }}"><span class="first-T">T</span><span class="second-T">T</span><span class="first-B">B</span></a>
                {% for category, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ category }}">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">

                        <a class="nav-item nav-link" href="{{ path('home') }}">Accueil</a>

                        {% if app.user %}
                            {#  _____Display if connected_____ #}
                            <a class="nav-item nav-link" href="/" >Mon Profil</a>
                            <a class="nav-item nav-link" href="/" >Mes Matchs</a>
                            <a class="nav-item nav-link" href="{{ path('app_logout') }}" >Déconnexion</a>
                        {% else %}
                            {#  _____Display if is not connected_____ #}
                            <a class="nav-item nav-link" href="{{ path('app_login') }}" >Login</a>
                        {% endif %}

                    </div>
                </div>
            </nav>
        {% endblock %}


        {% set containerStd = "mb-2 mt-4 container container-std-bg-white" %}
        {% set formBlock = "d-flex flex-column justify-content-around align-items-left align-content-center form-gca" %}



        {% block body %}{% endblock %}

        {% block footer %}
            <footer class="footer-container">

                <li><a href="">Mentions légales</a></li>
                <li><a href="">CGU</a></li>
                <li><a href="">Contact</a></li>
                <li><a href="">FAQ</a></li>

            </footer>
        {% endblock %}




        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
