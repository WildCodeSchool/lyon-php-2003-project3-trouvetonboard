{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}

{% block body %}
    <div class="matchs-title">
        <h3>Mes matchs</h3>
    </div>
    <div class="d-flex flex-fill flex-row p-0">
        <div class="d-flex flex-column w-25  container-a bg-light container-tab">
            {% for boardRequest in boardRequests %}
                <div class="p-3">
                    <a class="h4"href="{{ path('match_board_request_enterprise' ,
                        { "id": boardRequest.id }) }}">{{ boardRequest.title }}</a>
                </div>
            {% else %}
            {% endfor %}
        </div>
        <div class="w-75">
            <div class="d-flex flex-wrap flex-collumn m-3">
                {% for match in matchs %}
                    <div class="d-flex flex-wrap flex-collumn m-1 zoom">
                        {% include "matchs/_card_enterprise_advisor_match.html.twig" %}
                    </div>
                {% else %}
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
